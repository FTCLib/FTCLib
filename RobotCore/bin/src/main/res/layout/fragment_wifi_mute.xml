<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="#70D3D3D3"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:visibility="gone"
              android:clickable="true">

    <TextView
        android:id="@+id/countdownDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Wifi Disabling In"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="48sp"
        android:typeface="normal"/>

    <TextView
        android:id="@+id/countdownNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="10"
        android:textAlignment="center"
        android:textSize="256sp"
        android:typeface="normal"/>

    <TextView
        android:id="@+id/wifiDisabledNotification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Wifi disabled, touch to enable"
        android:textAlignment="center"
        android:textSize="48sp"
        android:typeface="normal"/>
</FrameLayout>